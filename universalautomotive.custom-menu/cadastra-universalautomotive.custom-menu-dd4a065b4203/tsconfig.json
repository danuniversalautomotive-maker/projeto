{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2017"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "."
  },
  "include": [
    "react/**/*.ts",
    "react/**/*.tsx",
    "react/**/*.js",
    "react/**/*.jsx",
    "react/typings/**/*.d.ts"
  ]
}
